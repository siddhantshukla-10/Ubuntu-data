<%include partials/header%>

	<div class="container">
		
		<header class="jumbotron">
			<div class="container">
				<h1>Welcome to YelpCamp!</h1>
				<p>View our hand-picked campgrounds from all over this world!</p>
				<p>
					<a class="btn btn-primary btn-lg" href="campgrounds/new">Add new Campgrounds</a>
				</p>
			</div>
		</header>

		<div class="row text-center" style="display: flex; flex-wrap: wrap;s">
			<%campgrounds.forEach(function(campground){%>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= campground.image%>">	
						<h4><div class="caption"> <%=campground.name%> </div></h4>
					</div>
				</div>
			<%});%>
		</div>	

	</div>

<%include partials/footer%>